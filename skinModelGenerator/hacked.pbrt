######################
#     build arm      #
######################
MakeNamedMedium "smoke" "string type" "skin_heterogeneous" "integer trans_x" 100 "integer trans_y" 100 "integer trans_z" 40
	"point p0" [ -2.5 -1 -1 ] "point p1" [  2.5 1 1 ]
	"string density_file" ["geometry/density.raw"]
	"string volumetric_colors" ["geometry/density.raw"] 
	"color sigma_a" [30 30 30] "color sigma_s" [50 50 50]


AttributeBegin
    Rotate 90 0 1 0
    Texture "brianskin" "color" "imagemap"
		"string filename" ["brian.png"]

    MediumInterface "smoke" ""
    Material "skin" "texture Kd" "brianskin"
		"float eta" [1.33] "color mfp" [1.2953e-03 9.5238e-04 6.7114e-04]
		"string t1" ["0.172982 0.112202 0.102329 0.827018 0.887798 0.897671 0.765914 0.441713 0.258535 0.234086 0.558287 0.741465 0.776247 0.512861 0.281838 0.223753 0.487139 0.718162 0.776247 0.512861 0.281838 0.223753 0.487139 0.718162 0.776247 0.512861 0.281838 0.223753 0.487139 0.718162"]
        	"float asr" 130 "float asg" 80 "float asb" 180
        	"float uroughness" [0.05] "float vroughness" [0.05]
    Shape "cylinder" "float radius" 1
		"float zmin" -2.500000
		"float zmax" 2.500000
		"float phimax" 360
AttributeEnd

