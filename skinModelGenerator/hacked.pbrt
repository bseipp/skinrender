######################
# build dermatascope #
######################
TransformBegin
	AttributeBegin
	    Translate 0 0 1.3
	    Material "matte" "rgb Kd" [ 0 0 0 ]
	    Shape "cylinder" "float radius" .5
	    "float zmin" -.5
	    "float zmax" .5
	    "float phimax" 360
	AttributeEnd

	#Points of dermatascope
	# L1 => -.5 -.5 1.3
	# L2 => .5 -.5 1.3
	# L3 => .5 .5 1.3
	# L4 => -.5 .5 1.3
	# U1 => -.5 -.5 1.8
	# U2 => .5 -.5 1.8
	# U3 => .5 .5 1.8
	# U4 => -.5 .5 1.8

	#Light from scope form halo
	AttributeBegin
		LightSource "point" "rgb I" [1 1 1] "point from" [ .5 0 1.71 ]
	AttributeEnd

	AttributeBegin
		LightSource "point" "rgb I" [1 1 1] "point from" [ -.5 0 1.71 ]
	AttributeEnd

	AttributeBegin
		LightSource "point" "rgb I" [1 1 1] "point from" [ 0 -.5 1.71 ]
	AttributeEnd

	AttributeBegin
		LightSource "point" "rgb I" [1 1 1] "point from" [ 0 .5 1.71 ]
	AttributeEnd

	AttributeBegin
	    AreaLightSource "diffuse" "rgb L" [ 1 1 1 ]
	    Shape "disk" "float height" 1.71
		         "float radius" .5
		         "float innerradius" 0
		         "float phimax" 360
	AttributeEnd

	#AttributeBegin
	#    LightSource "spot"  "point from" [ -.5 0 1.71 ]
	#			"point to" [ 0 0 0 ] 
	#			"float coneangle" 16.29 
	#			"float conedeltaangle" 5
	#			"rgb I" [ 1 1 1 ]
	#AttributeEnd

	AttributeBegin
		Texture "checks" "spectrum" "checkerboard"
		"float uscale" [8] "float vscale" [8]
		"rgb tex1" [ 0 0 0 ] "rgb tex2" [ 0 0 0 ]
		Material "matte" "texture Kd" "checks"    Shape "trianglemesh"
		"integer indices" [0 1 2 0 2 3]
		"point P" [ -.5 -.5 1.8   1. -.5 1.8   1. .5 1.8   -.5 .5 1.8 ]
	AttributeEnd

	AttributeBegin
		Texture "checks" "spectrum" "checkerboard"
		"float uscale" [8] "float vscale" [8]
		"rgb tex1" [ 0 0 0 ] "rgb tex2" [ 0 0 0 ]
		Material "matte" "texture Kd" "checks"    Shape "trianglemesh"
		"integer indices" [0 1 2 0 2 3]
		"point P" [ -.5 -.5 1.8   -.5 .5 1.8   -.5 .5 2.3   -.5 -.5 2.3 ]
	AttributeEnd

	AttributeBegin
		Texture "checks" "spectrum" "checkerboard"
		"float uscale" [8] "float vscale" [8]
		"rgb tex1" [ 0 0 0 ] "rgb tex2" [ 0 0 0 ]
		Material "matte" "texture Kd" "checks"    Shape "trianglemesh"
		"integer indices" [0 1 2 0 2 3]
		"point P" [ -.5 -.5 1.8   1. -.5 1.8   1. -.5 2.3   -.5 -.5 2.3 ]
	AttributeEnd

	AttributeBegin
		Texture "checks" "spectrum" "checkerboard"
		"float uscale" [8] "float vscale" [8]
		"rgb tex1" [ 0 0 0 ] "rgb tex2" [ 0 0 0 ]
		Material "matte" "texture Kd" "checks"    Shape "trianglemesh"
		"integer indices" [0 1 2 0 2 3]
		"point P" [ -.5 .5 2.3   -.5 .5 1.8    1. .5 1.8    1. .5 2.3 ]
	AttributeEnd

	AttributeBegin
		Texture "checks" "spectrum" "checkerboard"
		"float uscale" [8] "float vscale" [8]
		"rgb tex1" [ 0 0 0 ] "rgb tex2" [ 0 0 0 ]
		Material "matte" "texture Kd" "checks"    Shape "trianglemesh"
		"integer indices" [0 1 2 0 2 3]
		"point P" [ 1. .5 2.3   1. .5 1.8    1. -.5 1.8    1. -.5 2.3 ]
	AttributeEnd

	AttributeBegin
		Texture "checks" "spectrum" "checkerboard"
		"float uscale" [8] "float vscale" [8]
		"rgb tex1" [ 0 0 0 ] "rgb tex2" [ 0 0 0 ]
		Material "matte" "texture Kd" "checks"    Shape "trianglemesh"
		"integer indices" [0 1 2 0 2 3]
		"point P" [ -.5 -.5 2.3   -.5 .5 2.3    1. .5 2.3    1. -.5 2.3 ]
